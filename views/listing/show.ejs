<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-3">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing_image">
            <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b> <br>
                <%= listing.description %> <br>
                &#x20B9 <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
            </div>
    </div>
</div>
<div class="btns">
    <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
    <form action="/listing/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-2">Delete</button>
    </form>
</div>
